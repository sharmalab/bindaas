<project name="junit-mongodb-datasource-provider" default="copyProject">
	
	
    <description>
            Copy project to do maven build
    </description>

	<property name="project.home" value="../../../tests/junit-mongodb-datasource-provider"></property>
	<property name="build.src" value="src/main/java"></property>
	<property name="build.resources" value="src/main/resources"></property><property name="build.target" value="target"></property>
	<property name="dist.placeholder.dir" value="../dist"></property>
    <!-- ================================= 
          target: copyProject              
         ================================= -->
    <target name="copyProject" depends="clean" description="Copy project to do maven build">
        <copy todir="${build.src}">
        	<fileset dir="${project.home}/src">
        		<include name="**/*"/>
        	</fileset>
        </copy>
    	
    	<copy todir="${build.resources}">
    		<fileset dir="${project.home}">
    			<exclude name="**/src/" />
    			<exclude name="**/bin/"/>
    		</fileset>
    	</copy>
    </target>

    <!-- - - - - - - - - - - - - - - - - - 
          target: clean                      
         - - - - - - - - - - - - - - - - - -->
    <target name="clean">
    	<delete verbose="true" dir="${build.src}" />
    	<delete verbose="true" dir="${build.resources}" />
    	    	<delete verbose="true" dir="${build.target}" />
    	<mkdir dir="${build.src}"/>
    	<mkdir dir="${build.resources}"/>
    	    	<mkdir dir="${build.target}"/>
    	
    </target>
	<target name="dist">
					<copy todir="${dist.placeholder.dir}/bundles/optional">
						<fileset dir="target">
							<include name="*.jar"/>
						</fileset>
					</copy>
				</target>
	<target name="deploy"></target>
</project>
