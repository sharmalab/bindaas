<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>bindaas</groupId>
        <artifactId>data-providers</artifactId>
        <version>0.0.1</version>
    </parent>
    <artifactId>drill-datasource-provider</artifactId>
    <version>0.0.1-SNAPSHOT</version>


    <build>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>copy</id>
                            <phase>clean</phase>
                            <goals>
                                <goal>copy</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <artifactItems>
                            <artifactItem>
                                <groupId>org.apache.drill.exec</groupId>
                                <artifactId>drill-jdbc-all</artifactId>
                                <version>1.6.0</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${project.basedir}/src/main/resources/META-INF/lib</outputDirectory>
                            </artifactItem>
                            <artifactItem>
                                <groupId>org.slf4j</groupId>
                                <artifactId>slf4j-log4j12</artifactId>
                                <version>1.7.25</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${project.basedir}/src/main/resources/META-INF/lib</outputDirectory>
                            </artifactItem>
                            <artifactItem>
                                <groupId>org.slf4j</groupId>
                                <artifactId>slf4j-api</artifactId>
                                <version>1.7.25</version>
                                <type>jar</type>
                                <overWrite>true</overWrite>
                                <outputDirectory>${project.basedir}/src/main/resources/META-INF/lib</outputDirectory>
                            </artifactItem>
                        </artifactItems>
                    </configuration>
                </plugin>
            </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>bindaas</groupId>
            <artifactId>bindaas-core-api</artifactId>
            <version>0.0.1</version>
        </dependency>
        <dependency>
            <groupId>bindaas</groupId>
            <artifactId>generic-sql-datasource-provider</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.apache.drill.exec</groupId>
            <artifactId>drill-jdbc-all</artifactId>
            <version>1.6.0</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.7.25</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.25</version>
        </dependency>
    </dependencies>
</project>